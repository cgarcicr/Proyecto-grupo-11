<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body >
    <%- include('../partials/header') %>
    <br><br>
    <div class="main">
        <div class="shop_top">
        <div class="container">
            <h4 class="title">Carro de compras</h4><br>
            <h3>Productos (<%=listaProductos.length%>)</h3>
            <div style="display: flex; flex-direction: column;align-items: left;" class="row shop_box-top">
            <% listaProductos.forEach( ( producto) =>{ %>
                <div class="col-md-5 shop_box">
                        <div style="display: flex;justify-content: space-around" class="shop_desc">
                            <img style="width:80px" src="/images/imagesProductos/<%=producto.imagen%>" class="img-responsive" alt=""/>
                            <h3><a href="#"><%=producto.nombre%></a></h3>
                            <!-- <span class="reducedfrom">$<%=producto.precio%></span> -->
                            <span style="padding-top: 60px;" class="actual">Precio: $<%=producto.precio%></span><br>
                            <div class="clear"></div>
                            <div>
                                <a href="/bolsa/eliminarProducto/<%=producto.id%>"><i class="far fa-trash-alt"></i></a>
                            </div>
                        </div>

                </div>
                <%});%>
            </div>
            <div class="row">
                <div class="col-md-4"><h3>Total: <%=suma%></h3></div>
                <div class="col-md-4">
                    <div class="button1">
                        <input type="submit" name="Submit" value="Realizar compra">
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>


    <%- include('../partials/footer') %>
</body>
</html>